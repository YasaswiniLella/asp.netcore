@model Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="row">
    <div class="col-md-6 ml-5">
        <form asp-action="Edit" asp-controller="Books" method="post">
            <div class="form-group">
                <label asp-for="BookName"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PublishedDate"></label>
                <input asp-for="PublishedDate" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Genre"></label>
                <select asp-for="Genre" class="form-control">
                    <option selected disabled>--Select--</option>
                    <option value="Fiction">Fiction</option>
                    <option value="Biography">Biography</option>
                    <option value="Horror">Horror</option>
                    <option value="Non-Fiction">Non-Fiction</option>

                </select>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary">Edit Book</button>
            </div>

        </form>
    </div>
</div>

