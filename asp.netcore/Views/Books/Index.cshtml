@model IEnumerable<Book>
@{
    Layout="~/Views/Shared/_Layout.cshtml";
}

<h1>List of Books</h1>
@if (Model.Count() == 0)
{
    <h3>No books</h3>
}
else
{
                <ul class="list-group">
                    @foreach (var book in Model)
                    {
                        <li class="list-group-item">
                            <a asp-action="Details" asp-route-id="@book.Id" asp-controller="Books">@book.BookName</a>
                         </li>
                    }
                </ul>
}
<br />
<a asp-action="Create" asp-controller="Books" class="btn btn-secondary ml-3">Add</a>



